<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/puzzle_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/puzzle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puzzle Challenge"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/puzzle_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No puzzle available"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/puzzle_completion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp"
        android:background="#E3F2FD">

        <TextView
            android:id="@+id/puzzle_completion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are 1 step closer in reaching your goal!"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:maxLines="3"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/puzzle_grid_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/puzzle_tiles_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView android:id="@+id/tile_0" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView android:id="@+id/tile_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView android:id="@+id/tile_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_9" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_10" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_11" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView android:id="@+id/tile_12" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_13" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_14" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
                <ImageView android:id="@+id/tile_15" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
