# Uncomment this line to define a global platform for your project
platform :ios, '16.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 16.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      end
    end
  end

  # Fix WidgetKit + AppIntents + CocoaPods build cycle:
  # Flutter's "Thin Binary" phase declares ${TARGET_BUILD_DIR}/${INFOPLIST_PATH}
  # as an input, which makes Xcode create a directory-tree dependency on the
  # entire .app bundleâ€”including embedded WidgetKit extensions. When those
  # extensions use AppIntents, ExtractAppIntentsMetadata feeds back into the
  # same bundle, forming a cycle.  Clearing the input list is safe because
  # the phase already sets alwaysOutOfDate = 1 (it always runs).
  main_project = Xcodeproj::Project.open(File.join(__dir__, 'Runner.xcodeproj'))
  runner_target = main_project.targets.find { |t| t.name == 'Runner' }
  if runner_target
    thin_binary = runner_target.shell_script_build_phases.find { |p| p.name == 'Thin Binary' }
    thin_binary.input_paths = [] if thin_binary
    main_project.save
    puts "Cleared Thin Binary inputPaths to fix WidgetKit build cycle"
  end

  # Fix WeScan Swift 6 / Xcode 16+ compatibility:
  # Remove @available(*, unavailable) stored properties which are now a compile error.
  wescan_file = File.join(installer.sandbox.root, 'WeScan', 'WeScan', 'ImageScannerController.swift')
  if File.exist?(wescan_file)
    File.chmod(0644, wescan_file)
    content = File.read(wescan_file)
    patched = content
      .gsub(/\s*@available\(\*, unavailable.*\)\s*\n\s*public var originalImage: UIImage\?\s*\n/, "\n")
      .gsub(/\s*@available\(\*, unavailable.*\)\s*\n\s*public var scannedImage: UIImage\?\s*\n/, "\n")
      .gsub(/\s*@available\(\*, unavailable.*\)\s*\n\s*public var enhancedImage: UIImage\?\s*\n/, "\n")
      .gsub(/\s*@available\(\*, unavailable.*\)\s*\n\s*public var doesUserPreferEnhancedImage: Bool = false\s*\n/, "\n")
    File.write(wescan_file, patched)
    puts "Patched WeScan @available stored properties"
  end
end
